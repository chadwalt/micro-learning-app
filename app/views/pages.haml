= partial :sidebar

= partial :navbar

%div{:class => "main-content"}
  %div{:class => "table_buttons_input"}
    %input{:class => "form-control", :id => "page_search", :placeholder => "Search pages"}
  %div{:class => "table_contents"}
    %table{:class => "table table-striped", :id => "table-striped"}
      %thead
        %tr
          %th{:scope => "col"} Title
          %th{:scope => "col"} Description
      %tbody
        - @pages.each do |value|
          %tr
            %td
              %a{:href => value.url} #{value.title}
            %td #{value.description}

:javascript
  if ('sessionStorage' in window) {
    sessionStorage.setItem('pages', JSON.stringify(#{@pages.to_json}));
  }